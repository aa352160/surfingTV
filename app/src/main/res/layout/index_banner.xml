<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/bannerViewPager"
        android:layout_width="match_parent"
        android:layout_height="231dp">

    </android.support.v4.view.ViewPager>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/search"
        android:layout_margin="25dp"
        android:id="@+id/searchButton"
        android:layout_alignTop="@id/bannerViewPager"
        android:layout_alignEnd="@id/bannerViewPager"
        android:background="@drawable/search"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@id/bannerViewPager"
        android:gravity="center">
        <View
            android:id="@+id/v_dot1"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/dotColor" />
        <View
            android:id="@+id/v_dot2"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/dotColor_unselected" />
        <View
            android:id="@+id/v_dot3"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/dotColor_unselected" />
        <View
            android:id="@+id/v_dot4"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/dotColor_unselected" />

    </LinearLayout>




</RelativeLayout>
